#define NUM_THREADS 8

#pragma kernel WriteSpectrumTexture

StructuredBuffer<float> _SpectrumBuffer;
RWTexture2D<float4> _SpectrumTexture;

[numthreads(NUM_THREADS,1,1)]
void WriteSpectrumTexture(uint3 id : SV_DispatchThreadID)
{
    _SpectrumTexture[id.xy] = float4(1, 1, 1, 1) * _SpectrumBuffer[id.x];
}
